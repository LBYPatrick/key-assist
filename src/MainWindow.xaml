<Window x:Class="key_assist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:key_assist"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Topmost="True"
        Opacity="1.0"
        Title="MainWindow" Height="0" Width="0">
    <Window.Background>
        <SolidColorBrush Color="Black" Opacity="0.4">
        </SolidColorBrush>
    </Window.Background>
        
    <Grid x:Name="MainGrid">

        <Grid x:Name="tile_grid" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="caps_tile" Grid.Column="0"/>
            <Image x:Name="num_tile" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
